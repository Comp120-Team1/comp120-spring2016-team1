<%= form_for(@incident) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-10 col-md-offset-1">
  <div class="field form-group col-md-6 col-md-offset-0">
    <%= f.label :subject %><br>
    <%= f.text_field :subject, :class => "form-control"%>
  </div>
  
  <br/>
  <div class="field form-group col-md-6 col-md-offset-0 dropdown">
    <%= f.label :priority %>
    <%= f.select :priority, [['!','1'],['!!','2'],['!!!','3']], :class => 'dropdown' %>

  </div>

  <div class="field form-group col-md-7" >
    <%= f.label :additional_details %><br>
    <%= f.text_area :additional_details, :class => "form-control", :rows => "10"%>
  </div>

  <div class="field form-group col-md-5">
    <%= f.label :location_of_incident %><br>
    <%= f.text_field :location_of_incident, :class => "form-control"%>
  </div>

  <div class="field form-group col-md-5">
    <%= f.label :time_of_incident %><br>
    <%= f.datetime_select :time_of_incident, :class => "form-control"%>
  </div>

  <div class="field form-group col-md-5">
    <%= f.label :dept_id, 'Intended Department' %><br>
    <%= f.number_field :dept_id, :class => "form-control"%>
  </div>

  <div class="field form-group col-md-5">
    <%= f.label :public do %>
            <%= f.check_box :public, :checked => true,
                        :data => {:size=>'small', 'on-text'=>'PUBLIC', 'off-text'=>'PRIVATE' }
                %>

    <% end %>
  </div>

  <div class="field form-group col-md-8">
    <%= form_tag '/upload', multipart: true do %>
      <label for="file">Upload File</label> <%= file_field_tag "file" %>
    <% end %>
  </div>

  <div class="actions col-md-10">
      <%= f.submit :class => "btn btn-success btn-md"%>
  </div>
</div>

<% end %>
