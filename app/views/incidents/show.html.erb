<div class = "col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class = "panel-heading">
        <strong>
        <%= @incident.subject %>
        </strong>
    </div>

    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Priority:</strong>
        <%= @incident.getPriority(@incident.priority) %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @incident.incident_category.name %>
      </p>


      <p>
        <strong>Location of Incident:</strong>
        <%= @incident.location_of_incident %>
      </p>

      <p>
        <strong>Time of Incident:</strong>
        <%= @incident.time_of_incident %>
      </p>

      <p>
        <strong>Additional Details:</strong>
        <%= @incident.additional_details %>
      </p>

      <p>
        <strong>Progress:</strong>
        <%= @incident.getProgress(@incident.progress) %>
      </p>

      <p>
        <strong>Public:</strong>
        <%= @incident.public %>
      </p>

      <div class="btn-group col-md-offset-5" role="group" aria-label="...">
        <button type="button" class="btn btn-default btn-md">
          <%= link_to 'Edit', edit_incident_path(@incident) %>
        </button>        
        <button type="button" class="btn btn-default btn-md">
          <%= link_to 'View All', incidents_path(@incident) %>
        </button>
      </div>
    </div>
  </div>
</div>